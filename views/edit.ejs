<%- include("partials/header") %>
<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= blog.title %> </div>
	<form action="/blogs/<%= blog._id %>?_method=PUT" method="post" class="ui form">
	<div class="field">
	  <label></lable>
	  <input type="text" name="blog[title]" value="<%= blog.title %>">
	</div>
	<div class="field">
	  <label></lable>
	  <input type="text" name="blog[image]" value="<%= blog.image %>">
	</div>
	<div class="field">
	  <label></lable>
	  <textarea name="blog[description]" placeholder="Description"><%= blog.description %></textarea>
	</div>
	<input type="submit" class="ui violet basic button big" value="Update">
	<a class="ui violet basic button big" href="/blogs/<%= blog._id %>">Go Back</a>
</form>
</div>

<%- include("partials/footer") %>